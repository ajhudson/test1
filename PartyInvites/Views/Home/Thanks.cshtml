@model PartyInvites.Models.GuestResponse
@{ 
    ViewBag.Title = "Thanks";
}

<h1>Thank you, @Model.Name!</h1>

<div class="lead">
    @if (Model.WillAttend == true)
    {
        @:It's great that you are coming.
        @Html.Action("Attendees", "Home")
    }
    else
    {
        @:Sorry you cannot make it.
    }
</div>

